<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_agregar_nudo"
    tools:context="com.example.nico.calculoestructuras.Activities.AgregarNudoActivity">
    <TextView
        android:id="@+id/nudo"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nudo"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#003050"
        android:textColor="#FFFFFF"/>

    <LinearLayout
        android:id="@+id/renglonx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nudo"
        android:layout_marginLeft="20dp"
        android:padding="10dp">
        <TextView
            android:id="@+id/x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="X : "
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/x_ingresada"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:background="#ffffff"
            android:cursorVisible="true"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/renglony"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/renglonx"
        android:layout_marginLeft="20dp">
        <TextView
            android:id="@+id/z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Y : "
            android:textSize="20dp"
            />

        <EditText
            android:id="@+id/y_ingresada"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:background="#ffffff"
            android:cursorVisible="true"/>
    </LinearLayout>
    <ImageView
        android:src="@drawable/tick"
        android:layout_below="@+id/renglony"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="100dp"
        android:layout_alignParentRight="true"
        android:onClick="guardarNudo"
        />
    <ImageView
        android:src="@drawable/cross"
        android:layout_below="@+id/renglony"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:onClick="descartarNudo"
        />

</RelativeLayout>
